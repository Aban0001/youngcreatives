---
const img = Astro.props.img;
const headline = Astro.props.headline;
const text = Astro.props.text;
---

<article>
  <img src={img} />
  <h3>{headline}</h3>
  <p>{text}</p>
</article>

<style>
  h3 {
    font-size: smaller;
    margin-bottom: 0.5rem;
  }

  p {
    font-size: smaller;
  }

  img {
    width: 100;
  }

  @media screen and (width >= 768px) {
    h3 {
      font-size: medium;
    }

    p {
      font-size: medium;
    }

    img {
      width: 100;
    }
  }
</style>
