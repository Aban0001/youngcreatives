---
const img = Astro.props.img;
const headline = Astro.props.headline;
const text = Astro.props.text;
const direction = Astro.props.direction;
---

<article class={direction}>
  <img src={img} />
  <div class="content">
    <h3>{headline}</h3>
    <p>{text}</p>
  </div>
</article>

<style>
  h3 {
    font-size: medium;
    margin-bottom: 0.5rem;
  }

  p {
    font-size: smaller;
  }

  img {
    width: 100;
  }

  article {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media screen and (width >= 768px) {
    h3 {
      font-size: larger;
    }

    p {
      font-size: medium;
    }

    img {
      width: 100;
    }

    article {
      grid-column: span 2;
      flex-direction: row;
      justify-content: space-around;
      align-items: center;
    }

    img {
      max-width: 45%;
    }

    .content {
      max-width: 45%;
    }

    article.right {
      flex-direction: row-reverse;
    }
  }
</style>
